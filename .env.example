# Directus Configuration
DIRECTUS_URL=https://your-directus-instance.com
DIRECTUS_EMAIL=admin@example.com
DIRECTUS_PASSWORD=your-secure-password

# Option 1: Static token (for server-side operations)
DIRECTUS_TOKEN=your-static-admin-token

# Option 2: Use project's auth system (recommended)
# No static token needed - pass tokens via Authorization header

# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Newsletter Configuration
NEWSLETTER_WEBHOOK_SECRET=your-webhook-secret
NEWSLETTER_DEFAULT_FROM_EMAIL=newsletter@yoursite.com
NEWSLETTER_DEFAULT_FROM_NAME=Your Newsletter

# Development Configuration
NUXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development

# Optional Configuration
NEWSLETTER_RATE_LIMIT=100
NEWSLETTER_MAX_FILE_SIZE=10MB
NEWSLETTER_CACHE_TTL=3600
