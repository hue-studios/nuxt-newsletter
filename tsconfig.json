{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "#app": ["./node_modules/nuxt/dist/app"],
      "#newsletter/*": ["./src/runtime/*"],
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    "types": ["@types/node", "@nuxt/types", "@nuxt/schema"]
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["dist", "node_modules", ".nuxt", "playground"]
}
