{
  "name": "@hue-studios/nuxt-newsletter",
  "version": "1.0.0",
  "description": "Complete newsletter management system for Nuxt 3 with Tailwind CSS 4 support",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "npm run dev:prepare && nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
    "setup:complete": "npm run install-collections && npm run verify-setup",
    "verify-setup": "node scripts/verify-setup.js",
    "install-collections": "node scripts/install-directus-collections.js"
  },
  "dependencies": {
    "@directus/sdk": "^20.0.0",
    "@sendgrid/mail": "^8.1.5",
    "@tiptap/core": "^2.1.13",
    "@tiptap/extension-bold": "^2.1.13",
    "@tiptap/extension-italic": "^2.1.13",
    "@tiptap/extension-link": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "@tiptap/vue-3": "^2.1.13",
    "@vueuse/core": "^10.5.0",
    "@vueuse/nuxt": "^10.5.0",
    "gsap": "^3.12.2",
    "handlebars": "^4.7.8",
    "mjml": "^4.15.3",
    "recharts": "^3.0.2",
    "sortablejs": "^1.15.0",
    "zod": "^3.25.75"
  },
  "devDependencies": {
    "@nuxt/devtools": "^2.6.2",
    "@nuxt/eslint-config": "^1.5.2",
    "@nuxt/module-builder": "^1.0.1",
    "@nuxt/schema": "^3.17.6",
    "@nuxt/test-utils": "^3.19.2",
    "@playwright/test": "^1.53.2",
    "@types/mjml": "^4.7.4",
    "@types/node": "^22.16.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "changelogen": "^0.6.2",
    "eslint": "^9.30.1",
    "happy-dom": "^18.0.1",
    "nuxt": "^3.17.6",
    "playwright": "^1.53.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.12"
  },
  "peerDependencies": {
    "@nuxtjs/color-mode": "^3.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "shadcn-nuxt": "^2.0.0",
    "tailwindcss": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": false
    },
    "@tailwindcss/vite": {
      "optional": false
    },
    "shadcn-nuxt": {
      "optional": false
    },
    "@nuxtjs/color-mode": {
      "optional": false
    }
  },
  "keywords": [
    "nuxt",
    "nuxt3",
    "newsletter",
    "email",
    "mjml",
    "directus",
    "sendgrid",
    "drag-drop",
    "templates",
    "analytics",
    "marketing",
    "shadcn-vue",
    "tailwindcss",
    "tailwindcss-4"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hue-studios/nuxt-newsletter.git"
  },
  "bugs": {
    "url": "https://github.com/hue-studios/nuxt-newsletter/issues"
  },
  "homepage": "https://github.com/hue-studios/nuxt-newsletter#readme",
  "license": "MIT",
  "author": "Hue Studios",
  "engines": {
    "node": ">=18.0.0"
  }
}