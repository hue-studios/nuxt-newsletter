{
  "name": "@hue-studios/nuxt-newsletter",
  "version": "1.0.0",
  "description": "Complete newsletter management system for Nuxt 3 with Tailwind CSS 4 support",
  "main": "./dist/module.mjs",
  "types": "./dist/types.d.ts",
  "exports": {
    ".": {
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nuxt-module build",
    "dev": "nuxt-module build --stub && nuxt dev playground",
    "dev:build": "nuxt-module build --stub",
    "dev:prepare": "nuxt-module build --stub && nuxt prepare playground",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "typecheck": "vue-tsc --noEmit",
    "prepack": "nuxt-module build",
    "prepare": "husky install",
    "verify-setup": "node scripts/verify-setup.js",
    "install-collections": "node scripts/install-directus-collections.js"
  },
  "dependencies": {
    "@directus/sdk": "^20.0.0",
    "gsap": "^3.12.2",
    "@tiptap/core": "^2.1.13",
    "@tiptap/extension-bold": "^2.1.13",
    "@tiptap/extension-italic": "^2.1.13",
    "@tiptap/extension-link": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "@tiptap/vue-3": "^2.1.13",
    "@vueuse/core": "^10.5.0",
    "@vueuse/nuxt": "^10.5.0",
    "handlebars": "^4.7.8",
    "mjml": "^4.15.3",
    "@sendgrid/mail": "^8.1.5",
    "sortablejs": "^1.15.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "^0.2.0",
    "@nuxt/module-builder": "^0.5.5",
    "@nuxt/schema": "^3.8.0",
    "@nuxt/test-utils": "^3.8.0",
    "@playwright/test": "^1.40.0",
    "@types/mjml": "^4.7.4",
    "@types/node": "^22.15.32",
    "@vitest/coverage-c8": "^0.33.0",
    "@vue/test-utils": "^2.4.2",
    "changelogen": "^0.5.5",
    "eslint": "^9.29.0",
    "happy-dom": "^12.10.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "nuxt": "^3.17.5",
    "playwright": "^1.40.0",
    "typescript": "^5.8.3",
    "vitest": "^0.34.6",
    "vue-tsc": "^1.8.22"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "shadcn-nuxt": "^2.0.0",
    "@nuxtjs/color-mode": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": false
    },
    "@tailwindcss/vite": {
      "optional": false
    },
    "shadcn-nuxt": {
      "optional": false
    },
    "@nuxtjs/color-mode": {
      "optional": false
    }
  },
  "keywords": [
    "nuxt",
    "nuxt3",
    "newsletter",
    "email",
    "mjml",
    "directus",
    "sendgrid",
    "drag-drop",
    "templates",
    "analytics",
    "marketing",
    "shadcn-vue",
    "tailwindcss",
    "tailwindcss-4"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hue-studios/nuxt-newsletter.git"
  },
  "bugs": {
    "url": "https://github.com/hue-studios/nuxt-newsletter/issues"
  },
  "homepage": "https://github.com/hue-studios/nuxt-newsletter#readme",
  "license": "MIT",
  "author": "Hue Studios",
  "engines": {
    "node": ">=18.0.0"
  }
}